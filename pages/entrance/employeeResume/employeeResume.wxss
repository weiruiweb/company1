@import "../../../wxParse/wxParse.wxss"
page{
	background: #f2f2f2;
}
.resume_list{
	width:100%;
	height:212rpx;
}
.resume_cont{
	height:120rpx;
	width:100%;
}
.user_img{
	width:120rpx;
	height:120rpx;
	border-radius:50%;
	overflow: hidden;
	margin:0 auto;
	border:solid 1px #fff;
}
.bgs{
	background:#fff;
}
.condition{
	height:60rpx;
}
.condition_item{
	margin-right:20rpx;
}
.condition_item image{
	width:24rpx;
	height:22rpx;
	margin-right:10rpx;
}
.resume_left{
	width:24%;
}
.resume_right{
	width:76%;
}
.resume_list{
	margin-bottom:20rpx;
}
.date{
	height:90rpx;
	display:flex;
	align-items: center;
  	justify-content: center;
  	color:#666;
  	background:#fff;
}
.date_left{
	height:70rpx;
}
.date_item{
	height:70rpx;
	width:50%;
	text-align:center;
	display:flex;
	align-items: center;
  	justify-content: center;
}
.date_item .text{
	height:50%;
}
.date_item image{
	width:17rpx;
	height:10rpx;
	margin-left:10rpx;
}
.input_icon{
	width:6%;
}

.input_icon image{
	width:22rpx;
	height:24rpx;
}
.input_list1{
	width:50%;
	height:88rpx;
}
.input_list1 .input_before1{
	width:35%;
	color:#000;
}
.input_list1 .input{
	width:90%;
	color:#666;
	padding:0 5%;
}
.next image{
	width:12rpx;
	height:20rpx;
}
.picker{
	width:100%;
}
.uploader_item image{
	width:160rpx;
	height:160rpx;
}
.experence{
	padding:30rpx 0;
	border-bottom:solid 1px #e0e0e0;

}
.input_list1  text{
	color:#333;
}
.uplode_img image{
	width:140rpx;
	height:160rpx;
}
.uplode{
	display:flex;
	padding:30rpx 0;
}
.derection image{
	width:20rpx;
	height:12rpx;
}
.interviwe{
	width:94%;
	height:40rpx;
	border:solid 1px #cfcfcf;
	border-radius:10rpx;
	padding:0 3%;
}
.picker{

	font-size:26rpx;
}
.derection{
	width:20%;
	height:40rpx;
	line-height:40rpx;
	text-align:right;
}
textarea{
	width:94%;
	padding:3%;
	background:#f6f6f6;
	font-size:28rpx;
	color:#333;
	border:0;
}
.submit_info{
	border-radius:0;
	width:100%;
	margin-bottom:0;
}
.linear {
background:linear-gradient(115deg, rgba(109,233,229,1.00),rgba(83,170,231,1.00));

}
