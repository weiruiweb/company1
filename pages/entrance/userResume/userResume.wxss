page{
	min-height:100%;
	width:100%;
}
.input_list1{
	width:100%;
	height:80rpx;
	margin-top:30rpx;
	border-bottom:solid 1px #e0e0e0;
}
.input_list1 .input_before1{
	color:#222;
}
.input_list1 input{
	width:76%;
	padding-left:2%;
	height:100%;
	border-radius:16rpx;
	color:#666;
	font-size:28rpx;
}
.next image{
	width:12rpx;
	height:20rpx;
}
.delete{
	width:40rpx;
	height:40rpx;
	position:absolute;
	right:-20rpx;
	top:-20rpx;
}
.picker{
	width:100%;
}
.uploader_item image{
	width:160rpx;
	height:160rpx;
}
textarea{
	padding:3%;
	height:200rpx;
	border:solid 1px #e0e0e0;
	height:scroll;
}
.input_icon{
	width:6%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 1%;
}
.input_icon image {
	width:30rpx;
	height:30rpx;
}
